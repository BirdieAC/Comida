        <!-- Listas -->
        <div class="lists-section">
            <div class="lists-header">
                <button class="list-tab active" onclick="showList('all')">Todas</button>
                <button class="list-tab" onclick="showList('Sopas')">Sopas</button>
                <button class="list-tab" onclick="showList('Prato Principal')">Pratos</button>
                <button class="list-tab" onclick="showList('Acompanhamento')">Acomp.</button>
            </div>

            <div id="list-all" class="items-list active"></div>
            <div id="list-Sopas" class="items-list"></div>
            <div id="list-Prato Principal" class="items-list"></div>
            <div id="list-Acompanhamento" class="items-list"></div>
        </div>
