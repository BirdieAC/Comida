        <!-- Categorias -->
        <div class="categories">
            <div class="category-card active" data-category="Sopas">
                <div class="category-icon">üç≤</div>
                <div class="category-name">Sopas</div>
                <div class="category-count" id="count-Sopas">0 itens</div>
            </div>
            <div class="category-card" data-category="Prato Principal">
                <div class="category-icon">üçΩÔ∏è</div>
                <div class="category-name">Prato Principal</div>
                <div class="category-count" id="count-Prato Principal">0 itens</div>
            </div>
            <div class="category-card" data-category="Acompanhamento">
                <div class="category-icon">ü•î</div>
                <div class="category-name">Acompanhamento</div>
                <div class="category-count" id="count-Acompanhamento">0 itens</div>
            </div>
        </div>

        <!-- Selector -->
        <div class="selector-section">
            <h2>Pronto para escolher?</h2>
            <div class="selected-dish" id="selectedDish"></div>
            <div class="button-group">
                <button class="btn-select" onclick="selectRandom('Sopas')">Escolher Sopa</button>
                <button class="btn-select" onclick="selectRandom('Prato Principal')">Escolher Prato</button>
                <button class="btn-select" onclick="selectRandom('Acompanhamento')">Escolher Acompanhamento</button>
            </div>
        </div>

        <!-- Adicionar Item -->
        <div class="add-section">
            <h3>Adicionar Novo Item</h3>
            <div class="form-row">
                <div>
                    <label for="dishName">Nome do prato ou sopa:</label>
                    <input type="text" id="dishName" placeholder="Ex: Caldo Verde">
                </div>
                <div>
                    <label for="dishCategory">Categoria:</label>
                    <select id="dishCategory">
                        <option>Sopas</option>
                        <option>Prato Principal</option>
                        <option>Acompanhamento</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label for="dishRecipe">Receita (opcional):</label>
                <textarea id="dishRecipe" placeholder="Escreve a receita ou notas sobre este prato..."></textarea>
            </div>
            <button class="btn-add" onclick="addDish()">Adicionar Item</button>
        </div>

        <!-- Modal para Receita -->
        <div id="recipeModal" class="modal">
            <div class="modal-content">
                <button class="modal-close" onclick="closeRecipeModal()">&times;</button>
                <div id="modalBody"></div>
