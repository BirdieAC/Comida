            </div>
        </div>

        <div class="selector-section">
            <h2>Pronto para escolher?</h2>
            <div class="selected-dish" id="selectedDish"></div>
            <div class="button-group">
                <button class="btn-select" onclick="selectRandom('Sopas')">Escolher Sopa</button>
                <button class="btn-select" onclick="selectRandom('Prato Principal')">Escolher Prato</button>
                <button class="btn-select" onclick="selectRandom('Acompanhamento')">Escolher Acompanhamento</button>
            </div>
        </div>

        <div class="add-section">
            <h3>Adicionar Novo Item</h3>
            <div class="form-row">
                <div>
                    <label for="dishName">Nome do prato ou sopa:</label>
                    <input type="text" id="dishName" placeholder="Nome do prato ou sopa...">
                </div>
                <div>
                    <label for="dishCategory">Categoria:</label>
                    <select id="dishCategory">
                        <option>Sopas</option>
                        <option>Prato Principal</option>
                        <option>Acompanhamento</option>
                    </select>
                </div>
            </div>
            <div>
                <label for="dishRecipe">Receita (opcional):</label>
                <textarea id="dishRecipe" placeholder="Receita (opcional)..."></textarea>
            </div>
            <button class="btn-add" onclick="addDish()">Adicionar Item</button>
        </div>

        <div class="lists-section">
            <div class="lists-header">
                <button class="list-tab active" onclick="showList('all')">Todas</button>
                <button class="list-tab" onclick="showList('Sopas')">Sopas</button>
                <button class="list-tab" onclick="showList('Prato Principal')">Pratos</button>
                <button class="list-tab" onclick="showList('Acompanhamento')">Acomp.</button>
            </div>
            <div id="list-all" class="items-list active"></div>
            <div id="list-Sopas" class="items-list"></div>
            <div id="list-Prato Principal" class="items-list"></div>
            <div id="list-Acompanhamento" class="items-list"></div>
        </div>
    </div>

    <script>
        let dishes = {
            'Sopas': [{ id: 1, name: 'Caldo Verde', recipe: '' }],
            'Prato Principal': [],
            'Acompanhamento': []
        };

        function loadData() {
            const saved = localStorage.getItem('dishes');
            if (saved) dishes = JSON.parse(saved);
            updateDisplay();
        }

        function saveData() {
            localStorage.setItem('dishes', JSON.stringify(dishes));
        }

        function addDish() {
            const name = document.getElementById('dishName').value.trim();
            const category = document.getElementById('dishCategory').value;
            const recipe = document.getElementById('dishRecipe').value.trim();

            if (!name) {
                alert('Por favor, escreve o nome do prato!');
                return;
            }

            dishes[category].push({ id: Date.now(), name, recipe });
            saveData();
            document.getElementById('dishName').value = '';
            document.getElementById('dishRecipe').value = '';
            updateDisplay();
        }

        function removeDish(category, id) {
            dishes[category] = dishes[category].filter(d => d.id !== id);
            saveData();
            updateDisplay();
        }

        function selectRandom(category) {
            const items = dishes[category];
            if (items.length === 0) {
                document.getElementById('selectedDish').textContent = 'Nenhum item!';
                return;
            }
            const random = items[Math.floor(Math.random() * items.length)];
            document.getElementById('selectedDish').textContent = random.name;
        }

        function showList(category) {
            document.querySelectorAll('.items-list').forEach(el => el.classList.remove('active'));
            document.querySelectorAll('.list-tab').forEach(el => el.classList.remove('active'));
            
            document.getElementById('list-' + (category === 'all' ? 'all' : category)).classList.add('active');
            event.target.classList.add('active');
            renderLists();
        }

        function renderLists() {
            let allHtml = '';
            Object.entries(dishes).forEach(([cat, items]) => {
                items.forEach(dish => allHtml += createDishHtml(dish, cat));
            });
            document.getElementById('list-all').innerHTML = allHtml || '<div class="empty-message">Nenhum item</div>';

            Object.keys(dishes).forEach(cat => {
                let html = dishes[cat].length > 0 
                    ? dishes[cat].map(dish => createDishHtml(dish, cat)).join('')
                    : '<div class="empty-message">Nenhum item</div>';
                document.getElementById('list-' + cat).innerHTML = html;
            });
        }

        function createDishHtml(dish, category) {
            return `<div class="item">
                <div class="item-info">
                    <h4>${dish.name}</h4>
                    <div class="item-category">${category}</div>
                    ${dish.recipe ? `<div class="item-recipe">${dish.recipe}</div>` : ''}
                </div>
                <button class="btn-delete" onclick="removeDish('${category}', ${dish.id})">Remover</button>
            </div>`;
        }

        function updateDisplay() {
            Object.keys(dishes).forEach(cat => {
                const count = dishes[cat].length;
                document.getElementById('count-' + cat).textContent = count + ' ' + (count === 1 ? 'item' : 'itens');
            });
            renderLists();
        }

        document.querySelectorAll('.category-card').forEach(card => {
            card.addEventListener('click', function() {
                showList(this.dataset.category);
            });
        });

        document.getElementById('dishName').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') addDish();
        });

        loadData();
    </script>
</body>
