    <script>
        // Google Sheets URL - dados da tua sheet
        const GOOGLE_SHEETS_URL = 'https://docs.google.com/spreadsheets/d/1CvqFaq91pK3wGkURJdFlf3-GqSmk2cNK-JL5VS3wdKo/export?format=csv';

        // Estado da app
        let dishes = {
            'Sopas': [],
            'Prato Principal': [],
            'Acompanhamento': []
        };

        // Carrega dados do Google Sheets
        async function loadDataFromSheets() {
            try {
                const response = await fetch(GOOGLE_SHEETS_URL);
                const csv = await response.text();
                parseCSV(csv);
                updateDisplay();
            } catch (error) {
                console.log('N√£o conseguiu carregar do Sheets, usando localStorage...');
                loadDataFromLocalStorage();
            }
        }

        // Parse CSV (Google Sheets usa TAB como separador)
        function parseCSV(csv) {
            const lines = csv.trim().split('\n');
            if (lines.length <= 1) return;
            
            lines.slice(1).forEach((line, index) => {
                // Tenta primeiro com TAB (Google Sheets), depois com V√çRGULA
                let parts = line.split('\t');
                if (parts.length < 2) {
                    parts = line.split(',');
                }
                
                parts = parts.map(s => s.trim().replace(/^"(.*)"$/, '$1'));
                const categoria = parts[0];
                const nome = parts[1];
                const receita = parts[2] || '';
                
                if (categoria && nome && categoria !== 'Categoria') {
                    if (!dishes[categoria]) dishes[categoria] = [];
                    dishes[categoria].push({
                        id: Date.now() + index,
                        name: nome,
                        recipe: receita
                    });
                }
            });
        }

        // Carrega dados do localStorage (fallback)
        function loadDataFromLocalStorage() {
            const saved = localStorage.getItem('dishes');
            if (saved) {
                dishes = JSON.parse(saved);
                updateDisplay();
            }
        }

        // Guarda dados no localStorage
        function saveData() {
            localStorage.setItem('dishes', JSON.stringify(dishes));
        }

        // Adiciona novo prato
        function addDish() {
            const name = document.getElementById('dishName').value.trim();
            const category = document.getElementById('dishCategory').value;
            const recipe = document.getElementById('dishRecipe').value.trim();

            if (!name) {
                alert('Por favor, escreve o nome do prato!');
                return;
            }

            const dish = {
                id: Date.now(),
                name: name,
                recipe: recipe
            };

            dishes[category].push(dish);
            saveData();
            updateDisplay();

            // Limpa formul√°rio
            document.getElementById('dishName').value = '';
            document.getElementById('dishRecipe').value = '';
            document.getElementById('dishName').focus();
        }

        // Remove prato
        function removeDish(category, id) {
            dishes[category] = dishes[category].filter(d => d.id !== id);
            saveData();
            updateDisplay();
        }

        // Escolhe aleatoriamente
        function selectRandom(category) {
            const items = dishes[category];
            if (items.length === 0) {
                document.getElementById('selectedDish').textContent = 
                    'N√£o h√° ' + category.toLowerCase() + ' adicionados!';
                return;
            }

            const random = items[Math.floor(Math.random() * items.length)];
            document.getElementById('selectedDish').textContent = random.name;
        }

        // Mostra lista
        function showList(category) {
            // Esconde todas
            document.querySelectorAll('.items-list').forEach(el => {
                el.classList.remove('active');
            });
            document.querySelectorAll('.list-tab').forEach(el => {
                el.classList.remove('active');
            });

            // Mostra selecionada
            document.getElementById('list-' + (category === 'all' ? 'all' : category))
                .classList.add('active');
            event.target.classList.add('active');

            renderLists();
        }

        // Renderiza listas
        function renderLists() {
            // Lista "Todas"
            let allHtml = '';
            Object.entries(dishes).forEach(([category, items]) => {
                if (items.length > 0) {
                    items.forEach(dish => {
                        allHtml += createDishHtml(dish, category);
                    });
                }
            });
            document.getElementById('list-all').innerHTML = allHtml || 
                '<div class="empty-message">Nenhum item adicionado</div>';

            // Listas por categoria
            Object.keys(dishes).forEach(category => {
                let html = '';
                if (dishes[category].length > 0) {
                    dishes[category].forEach(dish => {
                        html += createDishHtml(dish, category);
                    });
                } else {
                    html = '<div class="empty-message">Nenhum item nesta categoria</div>';
                }
                document.getElementById('list-' + category).innerHTML = html;
            });
        }

        // HTML de um prato
        function createDishHtml(dish, category) {
            const recipeBtn = dish.recipe ? `<button class="btn-recipe" onclick="toggleRecipe(${dish.id})">üìñ Ver Receita</button>` : '';
            return `
                <div class="item">
                    <div class="item-info">
                        <h4>${dish.name}</h4>
                        <div class="item-category">${category}</div>
                        ${dish.recipe ? `<div class="item-recipe" id="recipe-${dish.id}">Receita: ${dish.recipe}</div>` : ''}
                        ${recipeBtn}
                    </div>
                    <button class="btn-delete" onclick="removeDish('${category}', ${dish.id})">
                        Remover
                    </button>
                </div>
            `;
        }

        // Atualiza display
        function updateDisplay() {
            // Atualiza contadores
            Object.keys(dishes).forEach(category => {
                const count = dishes[category].length;
                const singular = count === 1 ? 'item' : 'itens';
                document.getElementById('count-' + category).textContent = 
                    `${count} ${singular}`;
            });

            renderLists();
        }

        // Clica em categoria para filtrar
        document.querySelectorAll('.category-card').forEach(card => {
            card.addEventListener('click', function() {
                document.querySelectorAll('.category-card').forEach(c => {
                    c.classList.remove('active');
                });
                this.classList.add('active');
                const category = this.dataset.category;
                showList(category);
            });
        });

        // Toggle receita
        function toggleRecipe(dishId) {
            const recipeEl = document.getElementById(`recipe-${dishId}`);
            if (recipeEl) {
                recipeEl.classList.toggle('active');
            }
        }

        // Enter em input de nome
        document.getElementById('dishName').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') addDish();
        });

        // Carrega dados ao iniciar
        loadDataFromSheets();
    </script>
</body>
</html>
